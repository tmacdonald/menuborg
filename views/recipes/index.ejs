<h1><%= title %></h1>

<div id="app">
  <table class="table table-striped" id="recipes"></table>

  <button id="add">Add</button>

  <div id="addRecipe" class="hide">
    <form>
      <div class="control-group">
        <label class="control-label" for="name">Name</label>
        <div class="controls">
          <input type="text" class="input-xlarge" id="name" placeholder="Recipe name" />
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="servings">Servings</label>
        <div class="controls">
          <input type="text" class="input-small" id="servings" placeholder="4" />
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="ingredients">Ingredients</label>
        <div class="controls">
          <textarea class="input-xlarge" id="ingredients"></textarea>
        </div>
      </p>
      <div class="form-actions">
        <button type="submit" class="btn btn-primary">Save changes</button>
        <button class="btn">Cancel</button>
      </div>
    </form>
  </div>

<script type="text/template" id="recipeTemplate">
  <td>{{name}}</td><td>{{servings}}</td>
</script>
